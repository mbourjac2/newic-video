<form class="form border p-8 rounded-xl" novalidate>
  <div class="flex flex-col gap-8">
    <div class="flex flex-col gap-4">
      {% include "pages/contact/contact-form/contact-input.twig" with {'type': 'text', 'id': "name", 'label': "Nom", "is_required": true} %}
      {% include "pages/contact/contact-form/contact-input.twig" with {'type': 'text', 'id': "subject", 'label': "Sujet"} %}
      {% include "pages/contact/contact-form/contact-input.twig" with {'type': 'email', 'id': "email", 'label': "Email", "is_required": true} %}
      {% include "pages/contact/contact-form/contact-input.twig" with {'type': 'tel', 'id': "phone", 'label': "Téléphone", "is_required": true} %}
      <fieldset class="fieldset">
        <div class="flex flex-col gap-1">
          <label for="message">
            <span>Message *</span>
            {% if is_required %}
              <span>*</span>
            {% endif %}
          </label>
          <textarea rows="5" id="message" name="message" data-label="Message" class="border px-6 py-2 rounded-xl" required></textarea>
          <p class="mt-1"></p>
        </div>
      </fieldset>
    </div>
    <button class="submit border px-6 py-2 rounded-xl">Prendre contact !</button>
    <p class="result-message border px-6 py-2 rounded-xl hidden"></p>
  </div>
</form>
